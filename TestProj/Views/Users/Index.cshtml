@model TestProj.ViewModels.UserListViewModel

<h2>List of users</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @if (Model.AdminUsers.Count() > 0)
    {
        <div class="col-md-6">
            <h3>AdminUsers</h3>
            <input type="text" id="adminUsersInput" onkeyup="myFunction('adminUsersInput', 'adminUsersTable')" placeholder="Search for names..">
            <table id="adminUsersTable" class="table">
                <tr>
                    <th onclick="sortTable(0, 'adminUsersTable')">
                        Login
                    </th>
                    <th onclick="sortTable(1, 'adminUsersTable')">
                        Position
                    </th>
                    <th>
                        Date of birth
                    </th>
                    <th class="myhidden"></th>
                </tr>

                @foreach (var item in Model.AdminUsers)
                {
                    <tr>
                        <td>
                            @item.Login
                        </td>
                        <td>
                            @item.Position
                        </td>
                        <td>
                            @item.DateOfBirth
                        </td>
                        <td class="myhidden">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>

                }
            </table>
        </div>
    }
    @if (Model.EndUsers.Count() > 0)
    {
        <div class="col-md-6">
            <h3>EndUsers</h3>
            <input type="text" id="endUsersInput" onkeyup="myFunction('endUsersInput', 'endUsersTable')" placeholder="Search for names..">
            <table id="endUsersTable" class="table">
                <tr>
                    <th onclick="sortTable(0, 'endUsersTable')">
                        Login
                    </th>
                    <th onclick="sortTable(1, 'endUsersTable')">
                        Position
                    </th>
                    <th>
                        Date of birth
                    </th>
                    <th class="myhidden"></th>
                </tr>

                @foreach (var item in Model.EndUsers)
                {
                    <tr>
                        <td>
                            @item.Login
                        </td>
                        <td>
                            @item.Position
                        </td>
                        <td>
                            @item.DateOfBirth
                        </td>
                        <td class="myhidden">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>

                }
            </table>
        </div>
    }
</div>